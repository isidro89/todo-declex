<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="180" android:endColor="@color/colorPrimary" android:startColor="@color/colorAccent" android:type="linear" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorAlmostWhite" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/gray" android:width="1dp"></stroke>
            <solid android:color="@color/colorAlmostWhite" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>